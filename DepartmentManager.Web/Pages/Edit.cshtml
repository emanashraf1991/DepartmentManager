@page "{id:int}"
@model DepartmentManager.Web.Pages.EditModel
@{
    ViewData["Title"] = "Edit Department";
}
 

<h1>Edit Department</h1>

<form method="post">
    <input type="hidden" asp-for="Department.Id" />
    <div class="form-group">
        <label asp-for="Department.Name"></label>
        <input asp-for="Department.Name" class="form-control" />
        <span asp-validation-for="Department.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Department.ParentDepartmentId">Parent Department</label>
        <select asp-for="Department.ParentDepartmentId" class="form-control" asp-items="Model.ParentDepartments">
            <option value="">-- Select Parent Department --</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
